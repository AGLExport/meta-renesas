From 4112ab2c998c00a50b01a823c9662799d96b9340 Mon Sep 17 00:00:00 2001
From: Yusuke Goda <yusuke.goda.sx@renesas.com>
Date: Tue, 11 Jun 2013 19:49:27 +0900
Subject: [PATCH 590/611] RM: shmobile: r8a7778: add VPC support

Signed-off-by: Yusuke Goda <yusuke.goda.sx@renesas.com>
---
 arch/arm/mach-shmobile/board-bockw.c          |  8 ++++++++
 arch/arm/mach-shmobile/include/mach/r8a7778.h |  1 +
 arch/arm/mach-shmobile/setup-r8a7778.c        | 20 ++++++++++++++++++++
 3 files changed, 29 insertions(+)

diff --git a/arch/arm/mach-shmobile/board-bockw.c b/arch/arm/mach-shmobile/board-bockw.c
index 2b04de7..b846af0 100644
--- a/arch/arm/mach-shmobile/board-bockw.c
+++ b/arch/arm/mach-shmobile/board-bockw.c
@@ -180,6 +180,13 @@ static struct uio_info ipmmu_plat = {
 	.irq = -1,
 };
 
+/* VPC */
+static struct uio_info vpc_plat = {
+	.name = "VPC",
+	.version = "0",
+	.irq = -1,
+};
+
 /* SSI/AK4554 */
 static struct rsnd_ssi_platform_info rsnd_ssi[] = {
 	RSND_SSI_UNUSED, /* SSI 0 */
@@ -476,6 +483,7 @@ static void __init bockw_init(void)
 	r8a7778_add_du_device(&rcar_du_plat);
 	r8a7778_add_gp2d_device();
 	r8a7778_add_ipmmu_device(&ipmmu_plat);
+	r8a7778_add_vpc_device(&vpc_plat);
 	platform_device_register_data(&platform_bus, "soc-camera-pdrv", 0,
 				      &iclink0_ml86v7667,
 				      sizeof(iclink0_ml86v7667));
diff --git a/arch/arm/mach-shmobile/include/mach/r8a7778.h b/arch/arm/mach-shmobile/include/mach/r8a7778.h
index 8a873e3..001bf1f 100644
--- a/arch/arm/mach-shmobile/include/mach/r8a7778.h
+++ b/arch/arm/mach-shmobile/include/mach/r8a7778.h
@@ -42,6 +42,7 @@ extern void r8a7778_add_vin_device(int id,
 extern void r8a7778_add_du_device(struct rcar_du_platform_data *info);
 extern void r8a7778_add_gp2d_device(void);
 extern void r8a7778_add_ipmmu_device(struct uio_info *info);
+extern void r8a7778_add_vpc_device(struct uio_info *info);
 
 
 extern void r8a7778_init_late(void);
diff --git a/arch/arm/mach-shmobile/setup-r8a7778.c b/arch/arm/mach-shmobile/setup-r8a7778.c
index 0658f77..9842237 100644
--- a/arch/arm/mach-shmobile/setup-r8a7778.c
+++ b/arch/arm/mach-shmobile/setup-r8a7778.c
@@ -449,6 +449,26 @@ void __init r8a7778_add_ipmmu_device(struct uio_info *info)
 	platform_device_register_full(&pdevinfo);
 }
 
+/* VPC */
+static struct resource vpc_resources[] __initdata = {
+	DEFINE_RES_MEM(0xfd0d0000, 0x8f),
+};
+
+void __init r8a7778_add_vpc_device(struct uio_info *info)
+{
+	struct platform_device_info pdevinfo = {
+		.parent		= &platform_bus,
+		.name		= "uio_pdrv_genirq",
+		.id		= 1,
+		.res		= vpc_resources,
+		.num_res	= ARRAY_SIZE(vpc_resources),
+		.data		= info,
+		.size_data	= sizeof(*info),
+	};
+
+	platform_device_register_full(&pdevinfo);
+}
+
 void __init r8a7778_add_standard_devices(void)
 {
 	int i;
-- 
