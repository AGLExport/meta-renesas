+static void scu_or_writel(u32 data, u32 *reg)
+{
+	u32 val;
+
+	spin_lock(sculock);
+	val = readl(reg);
+	writel((val | data), reg);
+	spin_unlock(sculock);
+}
+
+static void scu_and_writel(u32 data, u32 *reg)
+{
+	u32 val;
+
+	spin_lock(sculock);
+	val = readl(reg);
+	writel((val & data), reg);
+	spin_unlock(sculock);
+}
