+			ret = scu_dmae_req_chan(SHDMA_SLAVE_PCM_SSI1_SRC1,
+						SHDMA_DEVID_AUDIOPP, ss);
+
+			/* dma(src->mem) channel allocation */
+			ret = scu_dmae_req_chan(SHDMA_SLAVE_PCM_SRC1_MEM,
+						SHDMA_DEVID_AUDIO, ss);
+		}
+
+		/* ssi1 via src1,dvc1 */
+		/* not implement */
+	}
+
+	FNC_EXIT
