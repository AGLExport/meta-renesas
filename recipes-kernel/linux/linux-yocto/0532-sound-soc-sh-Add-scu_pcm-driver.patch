+	struct scu_pcm_info *pcminfo = ss->runtime->private_data;
+	int dir = ss->stream == SNDRV_PCM_STREAM_CAPTURE;
+	int ret = 0;
+
+	FNC_ENTRY
+	if (!dir) { /* playback */
+		/* ssi0 */
+		if (pcminfo->routeinfo->pcb.init_ssi) {
