+	/* SRC_CONTROL */
+	if (src_dir == SRC_INOUT)
+		scu_and_writel(~(SRC_MODE_START_IN | SRC_MODE_START_OUT),
+			(u32 *)&rinfo->scusrcreg[src_ch]->control);
+	if (src_dir == SRC_OUT)
+		scu_and_writel(~SRC_MODE_START_OUT,
+			(u32 *)&rinfo->scusrcreg[src_ch]->control);
+	else /* SRC_IN */
+		scu_and_writel(~SRC_MODE_START_IN,
+			(u32 *)&rinfo->scusrcreg[src_ch]->control);
