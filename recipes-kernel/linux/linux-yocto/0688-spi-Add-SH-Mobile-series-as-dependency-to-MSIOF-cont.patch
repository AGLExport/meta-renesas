Date: Fri, 28 Jun 2013 09:34:14 +0900
Subject: [PATCH 688/715] spi: Add SH Mobile series as dependency to MSIOF
 controller

Signed-off-by: Kunihito Higashiyama <kunihito.higashiyama.ur@renesas.com>
(cherry picked from commit 7964ba28d3e6c90cdd2fc897c0a53f0c30206f60)

Signed-off-by: Ryo Kataoka <ryo.kataoka.wt@renesas.com>
---
 drivers/spi/Kconfig |    4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/drivers/spi/Kconfig b/drivers/spi/Kconfig
index 30d7d0f..8db3aef 100644
--- a/drivers/spi/Kconfig
+++ b/drivers/spi/Kconfig
@@ -318,10 +318,10 @@ config SPI_S3C64XX
 
 config SPI_SH_MSIOF
 	tristate "SuperH MSIOF SPI controller"
-	depends on SUPERH && HAVE_CLK
+	depends on (SUPERH || ARCH_SHMOBILE) && HAVE_CLK
 	select SPI_BITBANG
 	help
-	  SPI driver for SuperH MSIOF blocks.
+	  SPI driver for SuperH and SH Mobile MSIOF blocks.
 
 config SPI_SH
 	tristate "SuperH SPI controller"
