+#include <linux/kernel.h>
+#include <linux/init.h>
+#include <linux/irq.h>
+#include <linux/platform_device.h>
+#include <mach/common.h>
+#include <asm/mach-types.h>
+#include <asm/mach/arch.h>
+#include <asm/hardware/gic.h>
+
+static struct platform_device *rbsr_devices[] __initdata = {
+};
+
+static void __init rbsr_init(void)
+{
+	r8a7778_add_standard_devices();
+	platform_add_devices(rbsr_devices, ARRAY_SIZE(rbsr_devices));
+}
+
+MACHINE_START(RBSR, "rbsr")
+	.map_io		= r8a7778_map_io,
+	.init_early	= r8a7778_add_early_devices,
+	.nr_irqs	= NR_IRQS_LEGACY,
+	.init_irq	= r8a7778_init_irq,
+	.handle_irq	= gic_handle_irq,
+	.init_machine	= rbsr_init,
+	.init_late	= shmobile_init_late,
+	.timer		= &shmobile_timer,
+MACHINE_END
